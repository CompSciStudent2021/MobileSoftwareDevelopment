<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Assignment" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Other theme attributes -->
        <item name="colorPrimary">@color/your_primary_color</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <!-- Define your AppBarOverlay style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"></style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>